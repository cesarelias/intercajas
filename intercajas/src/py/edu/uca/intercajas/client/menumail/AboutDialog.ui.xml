<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:py.edu.uca.intercajas.client.menumail'>

  <ui:image field='logo' src='logo.png'/>

  <ui:style>
  .panel {
    padding: 10px;
 	}

  .aboutText {
    text-align: left;
  }

  @sprite .logo {
    gwt-image: 'logo';
    float: left;
    padding-right: 1em;
  }

  .buttons {
    text-align: right;
  }
  </ui:style>

  <g:HTMLPanel width='24em' styleName='{style.panel}'>
    <div class='{style.logo}'/>

    <div class='{style.aboutText}'>
    Sistema Intercajas
    <br/>Version 0.1
    <br/>Universidad Católica Nuestra Señora de la Asunción
    </div>

    <div class='{style.buttons}'>
      <g:Button text='Close' ui:field='closeButton' />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
