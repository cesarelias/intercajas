<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:gt="urn:import:py.edu.uca.intercajas.client.mensaje">

	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>

	<g:DockLayoutPanel unit="PX" width="720px" height="470px">
		<g:center>
			<g:DockLayoutPanel height="100%" width="100%">
				<g:north size="110">
					<g:HorizontalPanel width="100%">
						<!-- <gt:SolicitudTitularEditor ui:field="solicitudTitularEditor" /> -->
						<g:DecoratorPanel title="Adjuntos">
							<gt:UploadAutorizar ui:field="upload" />
						</g:DecoratorPanel>
					</g:HorizontalPanel>
				</g:north>
				<g:west size="300">
					<g:VerticalPanel>
						<g:HTMLPanel>
							<table>
								<tr>
									<td width="120px">Observacion</td>
								</tr>
								<tr>
									<td>
										<g:TextArea ui:field="observacion" />
									</td>
								</tr>
							</table>
						</g:HTMLPanel>
					</g:VerticalPanel>
				</g:west>
				<g:center>
					<g:HTML ui:field="detalle"></g:HTML>
				</g:center>
			</g:DockLayoutPanel>
		</g:center>
		<g:south size="40">
			<g:HorizontalPanel>
				<g:Button ui:field="cancelar">Cancelar</g:Button>
				<g:Button ui:field="autorizar">Autorizar y enviar</g:Button>
			</g:HorizontalPanel>
		</g:south>


	</g:DockLayoutPanel>

</ui:UiBinder> 