<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:gt="urn:import:py.edu.uca.intercajas.client.mensaje">

	<ui:style>
		.important {
		font-weight: bold;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="720px" height="470px">
		<g:center>
			<g:TabLayoutPanel barUnit="PX" barHeight="30"
				animationDuration="1000" ui:field="tab" height="400px">
				<g:tab>
					<g:header size='7'>Anular envio de mensaje</g:header>
					<g:DockLayoutPanel unit="PX">
						<g:north size="20">
							<g:Label>Observacion</g:Label>
						</g:north>
						<g:center>
							<g:TextArea ui:field="observacion" height="100%"
								width="100%" />
						</g:center>
					</g:DockLayoutPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
		<g:south size="40">
			<g:HorizontalPanel>
				<g:Button ui:field="cancelar">Cancelar</g:Button>
				<g:Button ui:field="anular">Anular</g:Button>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>

</ui:UiBinder> 