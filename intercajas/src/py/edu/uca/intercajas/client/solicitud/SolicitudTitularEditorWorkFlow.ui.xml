<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gt="urn:import:py.edu.uca.intercajas.client.solicitud">
	<ui:style>
	
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="720px" height="470px">
		<g:center>
			<g:DockLayoutPanel height="100%" width="100%">
				<g:north size="110">
					<g:HorizontalPanel width="100%">
						<gt:SolicitudTitularEditor ui:field="solicitudTitularEditor" />
						<g:DecoratorPanel title="Adjuntos">
							<g:VerticalPanel>
								<g:Label>Adjuntos</g:Label>
								<g:ScrollPanel width="350px" height="70px">
									<g:FlowPanel ui:field="upload" />
								</g:ScrollPanel>
								<g:Label ui:field="resumenUpload"/>
							</g:VerticalPanel>
						</g:DecoratorPanel>
					</g:HorizontalPanel>
				</g:north>
				<g:center>
					<gt:TablaTiempoServicioDeclarado
						ui:field="tablaTiempoServicioDeclarado" />
				</g:center>
				<g:south size="110">
					<g:TextArea ui:field="cuerpoMensaje"></g:TextArea>
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
		<g:south size="40">
			<g:HorizontalPanel>
				<g:Button ui:field="cancelar">Cancelar</g:Button>
				<g:Button ui:field="enviar">Enviar</g:Button>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 