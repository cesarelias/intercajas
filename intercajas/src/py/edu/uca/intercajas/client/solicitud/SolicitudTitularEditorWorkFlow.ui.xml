<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gt="urn:import:py.edu.uca.intercajas.client.solicitud">
	<ui:style>
	
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="750px" height="650px">
		<g:center>
			<g:DockLayoutPanel height="100%" width="100%" unit="PX">
				<g:north size="270">
					<g:VerticalPanel width="100%">
						<g:HorizontalPanel width="100%">
							<gt:SolicitudTitularEditor ui:field="solicitudTitularEditor" />
							<g:DecoratorPanel title="Adjuntos">
								<gt:UploadSolicitud ui:field="upload" />
							</g:DecoratorPanel>
						</g:HorizontalPanel>
						<g:DockLayoutPanel height="170px" unit="PX">
							<g:north size="20">
								<g:VerticalPanel>
									<g:CheckBox ui:field="cotizanteSolicitante" checked="true">
										El beneficiario cotizante es el solicitante
									</g:CheckBox>
									<g:Label>Derechohabientes</g:Label>
								</g:VerticalPanel>
							</g:north>
							<g:center>
								<gt:TablaSolicitudBeneficiario ui:field="tablaSolicitudBeneficiario"/>
							</g:center>
						</g:DockLayoutPanel>

					</g:VerticalPanel>
				</g:north>
				<g:center>
					<gt:TablaTiempoServicioDeclarado
						ui:field="tablaTiempoServicioDeclarado" />
				</g:center>

				<g:south size="110">
					<g:TextArea ui:field="cuerpoMensaje"></g:TextArea>
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
		<g:south size="40">
			<g:HorizontalPanel>
				<g:Button ui:field="cancelar">Cancelar</g:Button>
				<g:Button ui:field="enviar">Enviar</g:Button>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 