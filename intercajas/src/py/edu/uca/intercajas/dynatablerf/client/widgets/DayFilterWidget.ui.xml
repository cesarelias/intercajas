<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:dt='urn:import:py.edu.uca.intercajas.dynatablerf.client.widgets'>
  <ui:style>
    .all {
    	float: left;
    }
    
    .cb {
    	display: block;
    }
    
    .none {
    	margin-left: 5px;
    }
  </ui:style>
  <g:FlowPanel>
    <dt:DayCheckBox ui:field="sunday" caption="Antiguedad"
      day="0" styleName="{style.cb}" />
    <dt:DayCheckBox ui:field="monday" caption="Liquidacion"
      day="1" styleName="{style.cb}" />
    <dt:DayCheckBox ui:field="tuesday" caption="Finiquito"
      day="2" styleName="{style.cb}" />
    <dt:DayCheckBox ui:field="wednesday" caption="otro 1"
      day="3" styleName="{style.cb}" />
    <dt:DayCheckBox ui:field="thursday" caption="otro 2"
      day="4" styleName="{style.cb}" />
    <dt:DayCheckBox ui:field="friday" caption="otro 3"
      day="5" styleName="{style.cb}" />
    <dt:DayCheckBox ui:field="saturday" caption="otro 4"
      day="6" styleName="{style.cb}" />

    <g:Button ui:field="all" styleName="{style.all}">Todos</g:Button>
    <g:Button ui:field="none" styleName="{style.none}">Ninguno</g:Button>
  </g:FlowPanel>
</ui:UiBinder>